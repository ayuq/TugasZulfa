<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CinemaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white"
            app:title="Cinema"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="75dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/cinema1" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="220dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/cinema2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="370dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/cinema3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Buku Cinema 4D" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Buku Memahami Film" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Buku Cinema Builders" />


</RelativeLayout>